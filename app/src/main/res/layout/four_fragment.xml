<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:padding="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/rectangle_layer_list">
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/list_all_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部订单"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@mipmap/quanbudd_ddf"/>
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/list_wait_for_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:button="@null"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:drawableTop="@mipmap/daifukuan"/>
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/list_wait_for_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待收货"
            android:button="@null"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:drawableTop="@mipmap/daishouhuo"/>
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/list_wait_for_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待评价"
            android:button="@null"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:drawableTop="@mipmap/daipingjia"/>
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/list_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:button="@null"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:drawableTop="@mipmap/yiwancheng"/>
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/list_framelayout"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>
</LinearLayout>